<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background"
    tools:context=".connecting_screen">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/connecting_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="325dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.6"
        android:progress="60"
        app:indicatorColor="@color/tealmain"
        app:indicatorSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/oxywhite"
        app:trackCornerRadius="10dp"
        app:trackThickness="7dp"
        android:indeterminate="true"/>

    <TextView
        android:id="@+id/connecting_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/outfitregular"
        android:gravity="center_horizontal"
        android:text="@string/connecting"
        android:textColor="@color/oxyblack"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connecting_progress"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>