<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/bg_popup"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/closePopup"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:fontFamily="@font/outfitextralight"
        android:gravity="right"
        android:paddingEnd="10dp"
        android:text="x"
        android:textColor="@color/oxyblack"
        android:textSize="25sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfitregular"
        android:gravity="center"
        android:text="Do you want to leave this room now?"
        android:textColor="@color/oxyblack"
        android:textSize="20sp" />

    <TextView
                android:id="@+id/leaveRoom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:text="Leave"
                android:elevation="5dp"
                android:fontFamily="@font/outfitsemibold"
                android:textColor="@color/redoxy"
                android:textSize="16sp"
                android:gravity="center"/>
</LinearLayout>