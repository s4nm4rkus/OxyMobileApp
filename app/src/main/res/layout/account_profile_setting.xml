<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background"
    tools:context=".accountProfileSetting">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/outfitbold"
        android:gravity="center_horizontal"
        android:text="Account Setting"
        android:textAllCaps="true"
        android:textColor="@color/oxyblack"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="21dp"
        android:layout_height="22dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bg_transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow2"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_icprof"
        android:elevation="9dp"
        android:src="@drawable/ic_user_prof2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_profile_setting"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.368">

        <TextView
            android:id="@+id/user_nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/outfitbold"
            android:text="@string/store_text"
            android:textColor="@color/tealmain"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/email_accountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:drawableStart="@drawable/ic_account_email"
            android:text="email"
            android:textColor="@color/tealmain"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/outfitsemibold"
            android:text="Update your Account"
            android:textColor="@color/oxyblack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/outfitregular"
            android:text="Username:"
            android:textColor="@color/oxyblack" />

        <EditText
            android:id="@+id/username_update"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_login"
            android:drawableEnd="@drawable/ic_edit_user_name"
            android:elevation="3dp"
            android:fontFamily="@font/outfitlight"
            android:hint="@string/username"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:singleLine="true"
            android:textColor="@color/oxyblack"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/outfitregular"
            android:text="Current Password:"
            android:textColor="@color/oxyblack" />

        <EditText
            android:id="@+id/accountCurrentPassword"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_login"
            android:drawableEnd="@drawable/ic_password"
            android:elevation="3dp"
            android:fontFamily="@font/outfitlight"
            android:hint="Enter your current password"
            android:inputType="textPassword"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:singleLine="true"
            android:textColor="@color/oxyblack"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/outfitregular"
            android:text="Change Password:"
            android:textColor="@color/oxyblack" />

        <EditText
            android:id="@+id/accountPassword"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_login"
            android:drawableEnd="@drawable/ic_change_password"
            android:elevation="3dp"
            android:fontFamily="@font/outfitlight"
            android:hint="Enter a new password"
            android:inputType="textPassword"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:singleLine="true"
            android:textColor="@color/oxyblack"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/accountConfirmPassword"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_login"
            android:elevation="3dp"
            android:fontFamily="@font/outfitlight"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:singleLine="true"
            android:textColor="@color/oxyblack"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />

        <Button
            android:id="@+id/accountSave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="53dp"
            android:background="@drawable/ripple_hover_loginbtn"
            android:fontFamily="@font/outfitsemibold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>