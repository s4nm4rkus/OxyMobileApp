<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@color/tealsecondary"
    android:gravity="bottom"
    android:padding="20dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_user_prof"
        android:padding="3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_icprof"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_user_name"
        android:fontFamily="@font/outfitbold"
        android:textColor="@color/white"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_drawer_email"
        android:text="@string/account_email"
        android:fontFamily="@font/outfitregular"
        android:textColor="@color/white"
        android:textSize="16sp"/>



</LinearLayout>